{
  "name": "syslog-5514-to-ec2-13-indexed",
  "enabled": true,
  "spec": {
    "source": {
      "type": "syslog_udp",
      "options": { "host": "127.0.0.1", "port": 5514, "max_queue_size": 50000 }
    },
    "processor": {
      "mode": "indexed",
      "options": {
        "indexer_url": "http://127.0.0.1:7100",
        "profile": "json_auto",
        "timeout_seconds": 3,
        "include_meta": false
      }
    },
    "destination": {
      "type": "syslog_udp",
      "options": {
        "host": "ec2-13-51-86-207.eu-north-1.compute.amazonaws.com",
        "port": 514,
        "pri": 13,
        "appname": "observix-agent-a"
      }
    },
    "batch_max_events": 50,
    "batch_max_seconds": 1.0
  }
}
